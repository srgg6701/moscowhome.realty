mixin house(contents)
	a(href="javascript:void(0)")
		span.col-xs-3.col-sm-3.col-md-3.col-lg-3
			span.house-item
				span.img-block
					span.img-block-icon
						i.fa.fa-star-o
					span.img-block-price
						span.opacity-layer
						span.price-layer #{contents[1][0]} руб
					img(src='assets/images/testimage/' + contents[1][1] )
				span.house-item_textblock
					span.direction #{contents[0]}
					span.price-val
						i.fa.fa-dollar
						i.fa.fa-euro
						i.fa.fa-ruble
					span.name #{contents[1][2]}
					span.params1
						span.land-square #{contents[1][3]}
						span.home-suare #{contents[1][4]}.
					span.params2
						span.dop  #{contents[1][5]}
						if contents[1][6]
							span.type-estate #{contents[1][6]}
each contents  in [ ["Рублёвское шоссе",[ "49 900 000", "art3.png", "Лебединое озеро", "25 сот", "510 кв. м", "с мебелью", "Аренда" ]], ["Болотово", [ "50000", "art3.png", "Трясинное",  "53 сот", "460 кв. м", "с мебелью", "Аренда" ]] ]
	+house(contents)
